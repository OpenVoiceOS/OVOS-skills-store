---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/SearchBar.astro';
import SkillCard from '../components/SkillCard.astro';
import { getSkills } from '../utils/skills';

const skills = await getSkills();
---

<Layout title="Skill Store">
  <main class="min-h-screen p-8">
    <div class="max-w-6xl mx-auto">
      <div class="hero bg-cover bg-center h-64 flex items-center justify-center">
        <h1 class="text-5xl font-black text-black text-center">
          Open Voice OS Skill Store
        </h1>
      </div>
      
      <div class="mt-8">
        <SearchBar class="w-full max-w-lg mx-auto mb-8 p-4 border rounded-lg shadow-lg" />
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {skills.map((skill) => (
          <SkillCard skill={skill} />
        ))}
      </div>
    </div>
  </main>
</Layout>