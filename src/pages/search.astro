---
import Layout from '../layouts/Layout.astro';
import SkillCard from '../components/SkillCard.astro';
import { getSkills } from '../utils/skills';

const skills = await getSkills();
const searchQuery = Astro.url.searchParams.get('q') || '';
---

<Layout title="Search Skills - Open Voice OS">
  <main class="min-h-screen p-8">
    <div class="max-w-6xl mx-auto">
      <a href="/" class="inline-flex items-center text-blue-600 mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Home
      </a>
      
      <h1 class="text-3xl font-bold mb-6">Search Skills</h1>
      
      <div class="mb-8">
        <div class="relative">
          <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <svg class="w-4 h-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
            </svg>
          </div>
          <input 
            type="search" 
            id="live-search-input"
            name="q"
            value={searchQuery}
            placeholder="Search skills..."
            class="w-full pl-10 px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 shadow-md"
          />
          <button 
            id="clear-search" 
            type="button"
            class="absolute inset-y-0 right-0 flex items-center pr-3 cursor-pointer"
            style={searchQuery ? "" : "display: none;"}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      
      <div id="search-results">
        <div id="initial-results" class="masonry-container">
          {skills.map((skill) => (
            <div class="masonry-item">
              <SkillCard skill={skill} />
            </div>
          ))}
        </div>
        
        <!-- Empty state for no results -->
        <div id="no-results" class="hidden text-center py-16">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-xl font-bold text-gray-700">No skills found</h3>
          <p class="text-gray-500 mt-2">Try a different search term</p>
        </div>
      </div>
    </div>
    <div id="modal" class="modal hidden fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 p-3 z-[99]">
      <div class="modal-content bg-white p-6 rounded-lg shadow-lg max-h-full overflow-y-auto">
        <h2 class="text-lg font-semibold mb-4">Install Skill</h2>
        <p class="text-gray-700 mb-4">
          Make sure your device is near the speaker and ensure your device is on unmute and at maximum volume. Click "Play" to transmit the code.
        </p>
        <div class="flex gap-4 justify-end" id="before-transmission">
          <button
            class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg"
            onclick="closeModal()"
          >
            Cancel
          </button>
          <button
            class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg"
            onclick="playCode()"
          >
            Play
          </button>
        </div>
        <div id="after-transmission" class="hidden flex gap-4 justify-end mt-4">
          <button
            class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg"
            onclick="closeModal()"
          >
            Close
          </button>
          <button
            class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg"
            onclick="playCode()"
          >
            Retransmit
          </button>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Custom CSS for Masonry Layout */
  .masonry-container {
    column-count: 1;
    column-gap: 1.5rem;
  }
  
  .masonry-item {
    display: inline-block;
    width: 100%;
    margin-bottom: 1.5rem;
    break-inside: avoid;
  }
  
  /* Responsive column counts */
  @media (min-width: 640px) {
    .masonry-container {
      column-count: 2;
    }
  }
  
  @media (min-width: 1024px) {
    .masonry-container {
      column-count: 3;
    }
  }
</style>

<script define:vars={{ skills: skills, initialQuery: searchQuery }}>
  // Convert server-side skills data to client-side
  const allSkills = skills;
  let currentSkillId = null;
  
  // Ensure modal functions work correctly
  function showModal(skillId) {
    currentSkillId = skillId;
    const modal = document.getElementById('modal');
    const afterTransmission = document.getElementById('after-transmission');
    const beforeTransmission = document.getElementById('before-transmission');
    
    if (modal) {
      modal.classList.remove('hidden');
      // Force reflow to ensure CSS changes take effect
      void modal.offsetWidth;
    } else {
      console.error("Modal element not found");
    }
    
    if (afterTransmission) {
      afterTransmission.classList.add('hidden');
    }
    if (beforeTransmission) {
      beforeTransmission.classList.remove('hidden');
    }
    console.log("Modal shown for skill ID:", skillId);
  }

  function closeModal() {
    const modal = document.getElementById('modal');
    if (modal) {
      modal.classList.add('hidden');
    }
  }
  
  // Function to perform search
  function performSearch(query) {
    const noResults = document.getElementById('no-results');
    const clearButton = document.getElementById('clear-search');
    
    // Update clear button visibility
    if (clearButton) {
      clearButton.style.display = query ? 'flex' : 'none';
    }
    
    // Filter skills based on query
    const lowercaseQuery = query.toLowerCase().trim();
    const allCards = document.querySelectorAll('.skill-card');
    let visibleCount = 0;
    
    allCards.forEach(card => {
      const parent = card.closest('.masonry-item');
      const titleElement = card.querySelector('.skill-title');
      const descriptionElement = card.querySelector('.skill-description');
      const tagElements = card.querySelectorAll('.skill-tags');
      
      const title = titleElement ? titleElement.textContent.toLowerCase() : '';
      const description = descriptionElement ? descriptionElement.textContent.toLowerCase() : '';
      
      // Check if any tag matches
      let tagsMatch = false;
      tagElements.forEach(tag => {
        if (tag.textContent.toLowerCase().includes(lowercaseQuery)) {
          tagsMatch = true;
        }
      });
      
      const isMatch = !lowercaseQuery || 
        title.includes(lowercaseQuery) || 
        description.includes(lowercaseQuery) || 
        tagsMatch;
      
      if (isMatch) {
        if (parent) parent.style.display = '';
        visibleCount++;
      } else {
        if (parent) parent.style.display = 'none';
      }
    });
    
    // Show "No results" if nothing matches
    if (noResults) {
      if (visibleCount === 0 && lowercaseQuery) {
        noResults.classList.remove('hidden');
      } else {
        noResults.classList.add('hidden');
      }
    }
    
    // Update URL with search query (debounced)
    updateURLDebounced(query);
  }
  
  // Debounce function to avoid excessive URL updates
  let updateURLTimeout;
  function updateURLDebounced(query) {
    clearTimeout(updateURLTimeout);
    updateURLTimeout = setTimeout(() => {
      if (query) {
        const url = new URL(window.location);
        url.searchParams.set('q', query);
        window.history.replaceState({}, '', url);
      } else {
        const url = new URL(window.location);
        url.searchParams.delete('q');
        window.history.replaceState({}, '', url);
      }
    }, 500);
  }

  // Event handling should be set up immediately
  const setupEventListeners = () => {
    const searchInput = document.getElementById('live-search-input');
    const clearButton = document.getElementById('clear-search');
    
    // Set up event delegation for all skill cards using a single listener
    document.addEventListener('click', (e) => {
      // Find the closest install button or its parent elements
      const installButton = e.target.closest('.install-btn');
      if (installButton) {
        const skillId = installButton.getAttribute('data-skill-id');
        if (skillId) {
          showModal(skillId);
          e.preventDefault(); // Prevent any default actions
        }
      }
    });
    
    // Set up live filtering
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        performSearch(e.target.value);
      });
      
      // Handle clear button
      if (clearButton) {
        clearButton.addEventListener('click', () => {
          searchInput.value = '';
          performSearch('');
        });
      }
    }
  };

  // Run setup as soon as possible and also after DOM is fully loaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      setupEventListeners();
      // Initial search if query exists
      if (initialQuery) {
        setTimeout(() => performSearch(initialQuery), 100);
      }
    });
  } else {
    setupEventListeners();
    // Initial search if query exists
    if (initialQuery) {
      setTimeout(() => performSearch(initialQuery), 100);
    }
  }
  
  // GGWave setup and other existing functions remain the same
  // ...existing code for GGWave...

  function init() {
    if (!context) {
      context = new (window.AudioContext || window.webkitAudioContext)({ sampleRate: 48000 });
      
      parameters = ggwave.getDefaultParameters();
      parameters.sampleRateInp = context.sampleRate;
      parameters.sampleRateOut = context.sampleRate;
      instance = ggwave.init(parameters);
    }
  }

  function playCode() {
    init();
    
    if (!ggwave || !context || !currentSkillId) {
      console.error("GGWave, AudioContext, or Skill ID is not initialized.");
      return;
    }
    
    try {
      const waveform = ggwave.encode(
        instance,
        `PIP: ${currentSkillId}`,
        ggwave.ProtocolId.GGWAVE_PROTOCOL_AUDIBLE_FAST,
        10
      );
      
      const buf = convertTypedArray(waveform, Float32Array);
      const buffer = context.createBuffer(1, buf.length, context.sampleRate);
      buffer.getChannelData(0).set(buf);
      
      const source = context.createBufferSource();
      source.buffer = buffer;
      
      const gainNode = context.createGain();
      gainNode.gain.value = 1.0;
      
      source.connect(gainNode).connect(context.destination);
      
      source.start(0);
      console.log(`Audio playback started for skill: PIP: ${currentSkillId}`);
      document.getElementById('after-transmission').classList.remove('hidden');
      document.getElementById('before-transmission').classList.add('hidden');
    } catch (error) {
      console.error("Error transmitting package:", error);
    }
  }
</script>